<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="postText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="postListTitle" parent="postText">
        <item name="android:textSize">@dimen/postListTitleSize</item>
    </style>

    <style name="postTitle" parent="postText">
        <item name="android:textSize">@dimen/postTitleSize</item>
    </style>

    <style name="errorMessage" parent="postText">
        <item name="android:textColor">@color/errorRed</item>
    </style>

</resources>
